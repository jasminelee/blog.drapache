
start_session()


logged_in = SESSION.get('logged_in',False)


if not logged_in:
	die("must be logged in to save a post")
	
try:	
	post_id = POSTPARAMS.get('id',[])[0]
	title = POSTPARAMS.get('title',[])[0]
	body = POSTPARAMS.get('body',[])[0]
except IndexError:
	die("bad parameters")

	
post_path = "_posts/post_%s.markdown"%post_id

write_file(post_path,body)


posts_meta = open_json('_posts.json')

posts_meta[post_id]['title'] = title

print "ok"